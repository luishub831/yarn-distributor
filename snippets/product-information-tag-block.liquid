
{%- liquid
  assign options = block.settings

  assign tag_style = options.tag_style
  assign content_alignment = options.content_alignment

  assign main_heading = options.main_heading
  assign heading = options.heading
  assign heading2 = options.heading2
  assign heading3 = options.heading3
  assign heading4 = options.heading4  
  assign heading5 = options.heading5 
  assign body = options.body

  assign icon_position = options.icon_position
  assign icon = options.icon
  assign custom_icon_image = options.custom_icon_image
  assign custom_icon_image2 = options.custom_icon_image2
  assign custom_icon_image3 = options.custom_icon_image3
  assign custom_icon_image4 = options.custom_icon_image4  
  assign custom_icon_image5 = options.custom_icon_image5  
  assign enable_drawer = options.enable_drawer
  assign product_info_tag = options.product_info_tag
-%}
<style>
.product-information-tag__heading h3 {
    color: #222222;
    font-family: Inter;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    line-height: 22px;
    margin-bottom: 5px;
    text-align: left;
}
</style>
{% if product.tags contains product_info_tag %}
{% capture tag_content %}
  {% if heading != blank %}
    <div class="product-information-tag__heading {% if icon_position == 'inline' %}product-information-tag__heading--inline{% elsif icon_position == 'top' %}product-information-tag__heading--column{% endif %}">
      <h3>{{ main_heading -}}</h3>
    </div>

    <div class="product-information-tag__heading {% if icon_position == 'inline' %}product-information-tag__heading--inline{% elsif icon_position == 'top' %}product-information-tag__heading--column{% endif %}">
      {%- if custom_icon_image != blank -%}
        <img
          class='product-information-tag__heading-icon lazyload'
          {% render 'image-attributes', image: custom_icon_image, size: 'small' %}
        >
      {%- elsif icon != 'none' -%}
        {% render 'icon-pack', icon: icon, class: 'product-information-tag__heading-icon' %}
      {%- endif -%}
      {{ heading -}}   
    </div>
    
    <div class="product-information-tag__heading {% if icon_position == 'inline' %} product-information-tag__heading--inline{% elsif icon_position == 'top' %} product-information-tag__heading--column{% endif %}">
      {%- if custom_icon_image != blank -%}
        <img
          class='product-information-tag__heading-icon lazyload'
          {% render 'image-attributes', image: custom_icon_image2, size: 'small' %}
        >
      {%- elsif icon != 'none' -%}
        {% render 'icon-pack', icon: icon, class: 'product-information-tag__heading-icon' %}
      {%- endif -%}
      {{ heading2 -}}
    </div>
    
    <div class="product-information-tag__heading {% if icon_position == 'inline' %} product-information-tag__heading--inline{% elsif icon_position == 'top' %} product-information-tag__heading--column{% endif %}">
      {%- if custom_icon_image != blank -%}
        <img
          class='product-information-tag__heading-icon lazyload'
          {% render 'image-attributes', image: custom_icon_image3, size: 'small' %}
        >
      {%- elsif icon != 'none' -%}
        {% render 'icon-pack', icon: icon, class: 'product-information-tag__heading-icon' %}
      {%- endif -%}
      {{ heading3 -}}
    </div>
  
    <div class="product-information-tag__heading {% if icon_position == 'inline' %}product-information-tag__heading--inline{% elsif icon_position == 'top' %}product-information-tag__heading--column{% endif %}">
      {%- if custom_icon_image4 != blank -%}
        <img
          class='product-information-tag__heading-icon lazyload'
          {% render 'image-attributes', image: custom_icon_image4, size: 'small' %}
        >
      {%- elsif icon != 'none' -%}
        {% render 'icon-pack', icon: icon, class: 'product-information-tag__heading-icon' %}
      {%- endif -%}
      {{ heading4 -}}
    </div>
    
    <div class="product-information-tag__heading {% if icon_position == 'inline' %}product-information-tag__heading--inline{% elsif icon_position == 'top' %}product-information-tag__heading--column{% endif %}">
      {%- if custom_icon_image5 != blank -%}
        <img
          class='product-information-tag__heading-icon lazyload'
          {% render 'image-attributes', image: custom_icon_image5, size: 'small' %}
        >
      {%- elsif icon != 'none' -%}
        {% render 'icon-pack', icon: icon, class: 'product-information-tag__heading-icon' %}
      {%- endif -%}
      {{ heading5 -}}
    </div>
  {% endif %}
  {% if body != blank %}
    <div class="product-information-tag__body rte">{{ body }}</div>
  {% endif %}
{% endcapture %}

<div class='block-{{ block.id }} product-information-tag-block' {{ block.shopify_attributes }}>
  {% if enable_drawer %}
    <sidebar-button>
      <button
        class='unstyled-button product-information-tag product-information-tag--with-border-on-hover {% if content_alignment == 'center' and icon_position == 'top' %} product-information-tag--icon-centered{% endif %} {% if content_alignment == 'left' %} product-information-tag--left-alignment{% elsif content_alignment == 'center' %} product-information-tag--center-alignment{% endif %} {% if tag_style == 'solid' %} product-information-tag--solid{% elsif tag_style == 'outline' %} product-information-tag--outline{% endif %}'
        data-sidebar-id='product-information-sidebar-{{ block.id }}-{{ product.id }}-{{ sectionId }}'
        aria-label='{{ btn_text }}'
        data-sidebar-button
      >
        {{ tag_content }}
      </button>
    </sidebar-button>
  {% else %}
    <div class='product-information-tag {% if tag_style == 'solid' %} product-information-tag--solid{% elsif tag_style == 'outline' %} product-information-tag--outline{% endif %}'>
      {{ tag_content }}
    </div>
  {% endif %}
</div>
{% endif %}
