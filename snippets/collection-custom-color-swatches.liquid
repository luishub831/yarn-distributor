                > {% endcomment %}
            </div>
        {% endif %}
        {% if product.metafields.custom.colour_file_4 %}
            <div class="color-swatch-wrap">
                <input type="radio"  name="custom-color-swatch--{{product.id}}" value="{{product.metafields.custom.colour_hex_4}}" id="{{product.metafields.custom.colour_hex_4 | replace: " ", "-" }}--{{product.id}}-colour_hex_4" main-image-src="{{product.metafields.custom.colour_file_4 | img_url: '1000x1000'}}" secondary-image-src="{% if product.metafields.custom.colour_file_4_b %}{{product.metafields.custom.colour_file_4_b | img_url: '1000x1000'}}{% endif %}" class="custom-colour-swatch">
