                <label for="{{product.metafields.custom.colour_hex_5 | replace: " ", "-" }}--{{product.id}}-colour_hex_5" class="custom-color-swatches-label" style="background: {{product.metafields.custom.colour_hex_5}};"></label>
                {% comment %} <img 
                    src="{{product.metafields.custom.colour_file_5 | img_url: '100x'}}" 
                    alt="{{product.metafields.custom.colour_hex_5}}" 
                    class="custom-swatch-image"
                > {% endcomment %}
            </div>
        {% endif %}
    </div>

    {% endif %}