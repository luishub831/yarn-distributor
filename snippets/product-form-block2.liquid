            if (quantity > 0) {
                variantsToAdd.push({
                    id: variantId,
                    quantity: quantity
                });
            }
        });

        if (!allValid) {
            document.getElementById(`error-${productId}`).style.display = 'block';
            return false; // Al menos una entrada no cumple con el mínimo
        } else {
            document.getElementById(`error-${productId}`).style.display = 'none';
