{{ 'section-distributor-cta.css' | asset_url | stylesheet_tag }}

<div class="distributor-cta-section" style="background-color: {{ section.settings.background_color }};">
  <div class="distributor-cta-wrapper">
    {% if section.settings.left_curve_image != blank %}
      <div class="distributor-cta-curve distributor-cta-curve--left">
        <img 
          src="{{ section.settings.left_curve_image | image_url: width: 800 }}"
          alt="Decorative curve"
          loading="lazy"
          class="curve-image"
        >
      </div>
    {% endif %}

    {% if section.settings.right_curve_image != blank %}
      <div class="distributor-cta-curve distributor-cta-curve--right">
        <img 
          src="{{ section.settings.right_curve_image | image_url: width: 800 }}"
          alt="Decorative curve"
          loading="lazy"
          class="curve-image"
        >
      </div>
    {% endif %}

    <div class="distributor-cta-content">
      {% if section.settings.heading != blank %}
        <h2 class="section-header h2 text-center">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="distributor-cta-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      
      {% if section.settings.button_label != blank %}
        <a 
          href="{{ section.settings.button_link }}" 
          class=" btn btn--solid distributor-cta-button"
          style="background-color: {{ section.settings.button_color }}; color: {{ section.settings.button_text_color }};"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Distributor CTA",
  "tag": "section",
  "class": "section-distributor-cta",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Become a Distributor Today"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Grow your business with The Print Garage"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "REGISTER FOR FREE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#FF6B1A"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "left_curve_image",
      "label": "Left Curve Image"
    },
    {
      "type": "image_picker",
      "id": "right_curve_image",
      "label": "Right Curve Image"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Distributor CTA"
    }
  ]
}
{% endschema %}
